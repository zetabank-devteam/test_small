<?xml version="1.0" ?>
<robot name="zetabank" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find zetabank_description)/urdf/common_properties.xacro"/>
  <xacro:include filename="$(find zetabank_description)/urdf/zetabank.gazebo.xacro"/>
  <xacro:include filename="$(find zetabank_description)/urdf/sonar_sensor.urdf.xacro"/>
  
  <link name="base_footprint"/>

  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link" />
    <origin xyz="0 0 0.010" rpy="0 0 ${M_PI*0.5}"/>
  </joint>

  <link name="base_link">
    <visual>
      <origin xyz="-0 -0.33 0.0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://zetabank_description/meshes/zetabank_LCV.STL" scale="1 1 1"/>
      </geometry>
      <material name="light_black"/>
    </visual>
    <collision>
      <origin xyz="0 0.064  0.048" rpy="0 0 ${M_PI*0.5}"/>
      <geometry>
        <box size="0.265 0.265 0.089"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0.064 0" rpy="0 0 ${M_PI*0.5}"/>
      <mass value="1"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0"
               iyy="0.01" iyz="0.0"
               izz="0.01" />
    </inertial>

  </link>

<joint name="wheel_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_left_link"/>
    <origin xyz="0.1815 0  0.075" rpy="${-M_PI*0.5} 0 ${-M_PI*0.5}"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="wheel_left_link">    
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.050" radius="0.0812"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.01" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0"
               izz="0.001" />
    </inertial>
  </link>

  <joint name="wheel_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_right_link"/>
    <origin xyz="-0.1815 0  0.075" rpy="${-M_PI*0.5} 0 ${-M_PI*0.5}"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="wheel_right_link">   
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.050" radius="0.0812"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.01" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0"
               izz="0.001" />
    </inertial>
  </link>


  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="-0.10              -0.0 0.37" rpy="0 0 ${-M_PI*0.5}"/>
  </joint>

  <link name="imu_link"/>


  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0 -0.265 0.21" rpy="0 0 ${-M_PI*0.5}"/>
  </joint>
  <link name="lidar_link"/>
</robot>
